    x:Class="WhiteCane.Samples.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ScrollView>
        <VerticalStackLayout>
            <Label Style="{StaticResource Headline}" Text="Welcome to WhiteCane.Samples" />
